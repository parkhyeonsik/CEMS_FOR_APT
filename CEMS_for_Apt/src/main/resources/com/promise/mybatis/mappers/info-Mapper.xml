<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="info-Mapper">
	
	<sql id="info_search">
		<if test="searchType == 'n'.toString() ">
			and id evc_view_id like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'a'.toString() ">
			and id evc_num like '%'||#{keyword}||'%'
		</if>
		
	</sql>
	
	<select id="selectevc_infoByevc_num" resultType="evc_info">
		select * 
		from evc_info
		where evc_num = #{evc_num}
		
	</select>	
	
		<select id="selectevc_infoByevc_view_id" resultType="evc_info">
		select * 
		from evc_info
		where evc_view_id = #{evc_view_id}
	</select>	
	
		<select id="selectevc_infoList" resultType="evc_info">
		select *
		from evc_info
		where evc_view_id=#{evc_view_id}
		<include refid="info_search" />
		order by evc_num desc
	</select>
</mapper>